<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- URL Rewrite Rules for Integration -->
        <rewrite>
            <rules>
                <!-- FoodieMatch 메인 앱 -->
                <rule name="FoodieMatch" stopProcessing="false">
                    <match url="^(?!tbm|tbm-api).*" />
                    <action type="Rewrite" url="http://localhost:5173/{R:0}" />
                </rule>
                
                <!-- TBM Frontend -->
                <rule name="TBM-Frontend" stopProcessing="false">
                    <match url="^tbm/(.*)" />
                    <action type="Rewrite" url="http://localhost:3001/{R:1}" />
                </rule>
                
                <!-- TBM API -->
                <rule name="TBM-API" stopProcessing="false">
                    <match url="^tbm-api/(.*)" />
                    <action type="Rewrite" url="http://localhost:8080/{R:1}" />
                </rule>
            </rules>
        </rewrite>
        
        <!-- CORS 설정 -->
        <httpProtocol>
            <customHeaders>
                <add name="Access-Control-Allow-Origin" value="*" />
                <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
                <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
                <add name="Access-Control-Max-Age" value="3600" />
            </customHeaders>
        </httpProtocol>
        
        <!-- 정적 콘텐츠 압축 -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />
        
        <!-- 캐싱 설정 -->
        <staticContent>
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
        </staticContent>
        
        <!-- 보안 설정 -->
        <security>
            <requestFiltering>
                <requestLimits maxAllowedContentLength="10485760" /> <!-- 10MB -->
            </requestFiltering>
        </security>
    </system.webServer>
</configuration>
